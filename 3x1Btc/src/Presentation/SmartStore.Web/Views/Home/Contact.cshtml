@model ContactUsModel
@using SmartStore.Web.Models.Common;
@{
	/**/

	ViewBag.Title = "Contact";
	Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<br /><br /><br /><br /><br /><br />
@if (Model.SuccessfullySent)
{
	<div class="alert alert-success">
		@Model.Result
	</div>
}
else
{
	using (Html.BeginRouteForm("ContactUs", FormMethod.Post, new { @class = "contact-form" }))
	{
		<br /><br /><br /><br /><br /><br />
		<section id="contact-page">
			<div class="container">
				@if (!ViewData.ModelState.IsValid)
				{
					@Html.ValidationSummary(false)
				}
				<div class="center">
					<h2>Drop Your Message</h2>
					<p class="lead">For any queries, Please fill free to get in touch with us.</p>
				</div>
				<div class="row contact-wrap">
					<div class="status alert alert-success" style="display: none"></div>
					<form id="main-contact-form" class="contact-form" name="contact-form" method="post">
						<div class="col-sm-5 col-sm-offset-1">
							<div class="form-group">
								<label>Name *</label>
								<input type="text" name="FullName" class="form-control" required="required">
							</div>
							<div class="form-group">
								<label>Email *</label>
								<input type="email" name="Email" class="form-control" required="required">
							</div>
						</div>
						<div class="col-sm-5">
							<div class="form-group">
								<label>Message *</label>
								<textarea name="Enquiry" id="Enquiry" required="required" class="form-control" rows="8"></textarea>
							</div>
							<div class="form-group">
								<button type="submit" name="submit" class="btn btn-primary btn-lg" required="required">Submit Message</button>
							</div>
						</div>
					</form>
				</div><!--/.row-->
			</div><!--/.container-->
		</section><!--/#contact-page-->
	}
}

