														</div>
													</div>
													<div class="col-md-6">
														<div class="form-group">
															<label class="control-label">Bank Account :<span class="required" aria-required="true"> * </span></label>
															@Html.TextBoxFor(m => m.BankAccNo, new { @class = "form-control text-uppercase", @placeholder = "Bank Account No" })
														</div>
													</div>*@
												</div>
                                                @*<div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label">IFSC Code :<span class="required" aria-required="true"> * </span></label>
                                                            @Html.TextBoxFor(m => m.IFSCCode, new { @class = "form-control text-uppercase", @placeholder = "IFSC Code" })
                                                        </div>
                                                    </div>
