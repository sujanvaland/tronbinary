                                                            @Html.TextBoxFor(m => m.Branch, new { @class = "form-control text-uppercase", @placeholder = "Branch" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
