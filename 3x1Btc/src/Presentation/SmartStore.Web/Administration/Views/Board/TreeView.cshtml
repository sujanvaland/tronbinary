					}
				}
			}(null));

			// makes it pretty:
			// recursivley resizes all children to fit within the parent.
			var pretty = function () {
				var self = $(this),
					children = self.children(".container"),
					// subtract 4% for margin/padding/borders.
					width = (100 / children.length) - 2;
				children
					.css("width", width + "%")
					.each(pretty);

			};
			$("#mainContainer").each(pretty);
		}
	});
	

</script>
