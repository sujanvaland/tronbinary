			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.MaxWithdrawal)
			</td>
			<td class="adminData">
				@Html.SettingEditorFor(model => model.MaxWithdrawal)
				@Html.ValidationMessageFor(model => model.MaxWithdrawal)
			</td>
		</tr>
		<tr>
			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.AllowAutoWithdrawal)
			</td>
			<td class="adminData">
				@Html.SettingEditorFor(model => model.AllowAutoWithdrawal)
				@Html.ValidationMessageFor(model => model.AllowAutoWithdrawal)
			</td>
		</tr>
		<tr>
			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.AutoWithdrawalHour)
			</td>
