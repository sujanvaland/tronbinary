@model WithdrawalSettingsModel
@{
	ViewBag.Title = T("Admin.Hyip.WithdrawalSetting").Text;
}
@using (Html.BeginForm())
{
	<div class="section-header">
		<div class="title">
			<i class="fa fa-exchange"></i>
			@T("Admin.Hyip.WithdrawalSetting")
		</div>
		<div class="options">
			<button type="submit" name="save" value="save" class="btn btn-warning">
				<i class="fa fa-check"></i>
				<span>@T("Admin.Common.Save")</span>
			</button>
		</div>
	</div>

	Html.RenderAction("StoreScopeConfiguration", "Setting");

	@Html.ValidationSummary(false)

	<table class="adminContent">
		<tr>
			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.AllowWithdrawal)
			</td>
			<td class="adminData">
				@Html.SettingEditorFor(model => model.AllowWithdrawal)
				@Html.ValidationMessageFor(model => model.AllowWithdrawal)
			</td>
		</tr>
		<tr>
			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.MinWithdrawal)
			</td>
